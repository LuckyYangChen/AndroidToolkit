<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="tool_tv_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tool_color_232323</item>
    </style>

    <style name="tool_sp12" parent="tool_tv_wrap">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tool_sp14" parent="tool_tv_wrap">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tool_sp16" parent="tool_tv_wrap">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tool_sp18" parent="tool_tv_wrap">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tool_sp20" parent="tool_tv_wrap">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tool_sp22" parent="tool_tv_wrap">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="tool_sp24" parent="tool_tv_wrap">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="tool_theme_activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/tool_color_80ffffff</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="tool_theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>